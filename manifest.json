{
  "name": "Gist Previewer",
  "description": "Preview gist html/js/css code.",
  "version": "2.0.0",
  "content_scripts": [
    {
      "matches": ["https://gist.github.com/*"],
      "js": [ "js/gistpreviewer.js" ],
      "css": [ "css/gistpreviewer.css" ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [ "js/background.js" ]
  },
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "manifest_version": 2
}
